{
  "name": "dlts-readium-js-viewer",
  "version": "0.1.0",
  "description": "DLTS ReadiumJS viewer",
  "dependencies": {
    "js-beautify": "^1.6.4",
    "mocha": "^3.0.2",
    "wdio-mocha-framework": "^0.4.3 ",
    "wdio-spec-reporter": "0.0.3",
    "webdriverio": "^4.2.16"
  },
  "scripts": {
    "clean": "rm -fr readium-js-viewer/ tmp/*",
    "dist": "npm run clean && scripts/dist.sh prod",
    "dist:hypothesis": "npm run clean && scripts/dist.sh hypothesis",
    "dist:verify": "scripts/dist-verify.sh",
    "test": "npm run test:dist && npm run test:browser:local",
    "test:dist": "npm run dist && npm run dist:verify",
    "test:browser:local": "node node_modules/webdriverio/bin/wdio test/browser/conf/wdio.local.conf.js",
    "test:browser:local:debug:chrome": "node node_modules/webdriverio/bin/wdio test/browser/conf/wdio.local.debug-chrome.conf.js",
    "test:browser:local:debug:firefox": "node node_modules/webdriverio/bin/wdio test/browser/conf/wdio.local.debug-firefox.conf.js"
  },
  "devDependencies": {
    "wdio": "^0.3.3"
  }
}
